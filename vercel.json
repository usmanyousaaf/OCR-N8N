{
  "framework": null,
  "installCommand": "pip install -r requirements.txt",
  "buildCommand": "echo 'No build required'",
  "outputDirectory": ".",
  "devCommand": "uvicorn api.app:app --host 0.0.0.0 --port $PORT",
  "functions": {
    "api/app.py": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "/api/app.py" }
  ],
  "builds": [
    {
      "src": "/api/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "/static/**",
      "use": "@vercel/static"
    }
  ]
}
